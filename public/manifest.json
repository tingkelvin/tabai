{
    "name": "React Content Script Extension",
    "version": "1.0.0",
    "manifest_version": 3,
    "description": "A modern Chrome extension with React content scripts built with Webpack",
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["vendor.js", "content.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_title": "React Extension"
    },
    "background": {
      "service_worker": "background.js"
    },
    "web_accessible_resources": [
      {
        "resources": ["*.js", "*.css"],
        "matches": ["<all_urls>"]
      }
    ]
  }